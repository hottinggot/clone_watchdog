<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        >

        <ImageView
            android:id="@+id/food_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/food_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="제목"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/food_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/food_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="회사 이름"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/food_img"
            app:layout_constraintTop_toBottomOf="@id/food_title" />

        <TextView
            android:id="@+id/food_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="회수 및 판매 중지 원인"
            android:textColor="@color/colorRedPink"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/food_img"
            app:layout_constraintTop_toBottomOf="@id/food_company" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

